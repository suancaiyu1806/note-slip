.container {
  padding: 20rpx;
  min-height: 100vh;
  background: #f5f5f5;
  display: flex;
  flex-direction: column;
}

.editor-container {
  width: 100%;
  flex: 1;
  background: white;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.note-editor {
  width: 100%;
  min-height: 400rpx;
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
}

.button-group {
  display: flex;
  gap: 20rpx;
  padding: 20rpx 0;
}

.btn {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 40rpx;
  font-size: 28rpx;
}

.save-btn {
  background: #07c160;
  color: white;
}

.clear-btn {
  background: #f5f5f5;
  color: #666;
}

.loading {
  text-align: center;
  padding: 40rpx;
  color: #999;
  font-size: 28rpx;
} 