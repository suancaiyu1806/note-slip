.container {
  padding: 16px;
  height: 100vh;
  background: var(--background-default);
}

.header {
  width: 100%;
  display: flex;
  justify-content:flex-end;
  align-items: center;
  padding: 16px 0;
  margin-bottom: 8px;
  height: 40px;
}

.scan-btn {
  background: var(--primary-color);
  color: white;
  font-size: 12px;
  padding: 4px;
  border-radius: 4px;
  text-transform: uppercase;
  letter-spacing: 0.5px;
  box-shadow: var(--elevation-1);
  transition: all 0.3s ease;
  height: 28px;
  line-height: 20px;
}

.scan-btn:active {
  box-shadow: var(--elevation-2);
  background: var(--primary-dark);
}

.notes-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16px;
}

.note-card {
  background: var(--background-paper);
  border-radius: 8px;
  padding: 8px;
  aspect-ratio: 1; /* 使卡片成为正方形 */
  display: flex;
  flex-direction: column;
  box-shadow: var(--elevation-1);
  transition: all 0.3s ease;
}

.note-card:active {
  box-shadow: var(--elevation-2);
}

.note-content {
  flex: 1;
  font-size: 13px;
  color: var(--text-primary);
  overflow: hidden;
  text-overflow: ellipsis;
  text-align: center;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  line-height: 1.5;
  margin-bottom: 8px; /* 增加底部间距 */
  word-break: break-all;
  white-space: pre-wrap;
  max-height: calc(100% - 24px); /* 预留日期空间 */
}

.note-date {
  text-align: right;
  font-size: 12px;
  color: var(--text-secondary);
  height: 8px; /* 固定日期高度 */
  margin-right: 8px;
}

.loading,
.empty {
  text-align: center;
  padding: 32px;
  color: var(--text-secondary);
  font-size: 14px;
  background: var(--background-paper);
  border-radius: 8px;
  box-shadow: var(--elevation-1);
}
